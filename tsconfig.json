{
  "compileOnSave": false,
  "compilerOptions": {
  "declaration": true,
  "emitDecoratorMetadata": false,
  "experimentalDecorators": true,
  "lib": ["es2015", "dom"],
  "listFiles": true,
  "module": "es2015",
  "moduleResolution": "node",
  "noImplicitAny": false,
  "outDir": "./dist",
  "preserveConstEnums": true,
  "removeComments": true,
  "stripInternal": true,
  "target": "es2015"
  },
  "exclude": [
    "build",
    "dist",
    "doc",
    "node_modules"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
